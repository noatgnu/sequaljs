{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,        // Add this to generate .d.ts files
    "declarationMap": true      // Optional: creates sourcemaps for the .d.ts files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}